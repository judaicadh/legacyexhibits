---
export interface Props {
    title: string;
    description: string;
    image: string;
    href: string;
}

const { title, description, image, href } = Astro.props;
---

<a
        href={href}
        class="  block bg-white shadow-lg rounded-lg overflow-hidden
         transition-transform transform hover:scale-105 no-underline"
>
    <div class="p-4">
        <!-- Image & Title on the same line -->
        <div class="flex items-center gap-4">
            <!-- Slightly larger square image -->
            <img
                    src={image}
                    alt={title}
                    class="w-40 h-40  object-cover flex-none"
            />
            <h3 class="text-lg font-semibold text-gray-900 hover:underline">{title}</h3>
        </div>

        <!-- Description below -->
        <p class="text-gray-600 mt-3">
            {description}
        </p>
    </div>
</a>